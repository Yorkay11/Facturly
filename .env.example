# Frontend Environment Variables
# Copy this file to .env.local for local development

# API Backend URL
# Production: https://facturlybackend-production.up.railway.app
# Local: http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Site URL (for canonical URLs, sitemap, etc.)
# Production: https://www.facturly.online
# Local: http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# App URL (for OAuth callbacks and redirects)
# Production: https://app.facturly.online or https://facturly.online
# Local: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Tag Manager ID (optional)
# Get it from: https://tagmanager.google.com
# Format: GTM-XXXXXXX
NEXT_PUBLIC_GTM_ID=
